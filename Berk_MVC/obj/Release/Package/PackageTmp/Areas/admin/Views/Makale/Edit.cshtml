                @Html.EditorFor(model => model.MakaleOzet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MakaleOzet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MakaleIcerik, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MakaleIcerik, new { @id = "FullDescription", @class = "form-control", @rows = "200" })
                @Html.ValidationMessageFor(model => model.MakaleIcerik, "", new { @class = "text-danger" })
                <script>

            CKEDITOR.replace("FullDescription");
                </script> 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MakaleResim, htmlAttributes: new { @class = "control-label col-md-2" })
