            {
            new SelectListItem { Text = "Evet", Value = "true",Selected=Model.sil },
            new SelectListItem { Text = "Hayır", Value = "false",Selected=Model.sil}
            }, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.sil, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
