@using Berk_MVC.Models;
@using Berk_MVC.Areas.tr.Controllers;
@model List<Makale>
   @{
       ViewBag.Title = "Anasayfa";
}

<div class="row">

    <div class="col-md-12">

        <div class="row">
           @foreach (var item in Model)
           {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <a href="@String.Format("/tr/detay/{0}/{1}", item.id,URL.urlolustur(item.MakaleBaslik))">
                        <img src="@item.MakaleResim" class="anasayfa-resim" alt="">
                    </a>
                    <div class="caption">
                        <a href="@String.Format("/tr/detay/{0}/{1}", item.id,URL.urlolustur(item.MakaleBaslik))">
                            <h3 class="text-center">@item.MakaleBaslik</h3>
                        </a>
                        <p class="text-center">@item.MakaleOzet</p>
                        <p class="text-center">
                            <a class="btn btn-primary " role="button" style="text-decoration: none;" href="@String.Format("/tr/detay/{0}/{1}", item.id,URL.urlolustur(item.MakaleBaslik))">Detaylar</a>
                        </p>
                    </div>

                </div>
            </div>
           }
                   
         





        </div>
    </div>
</div>