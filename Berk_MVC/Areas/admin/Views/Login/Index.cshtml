@using Berk_MVC.Models;
@model Berk_MVC.Models.kullaniciadmin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

</head>
<body>
@using (Html.BeginForm("Giris", "Login",FormMethod.Post))
{
    <div class="container" style="max-width:500px;">
        <div class="row">
            <div class="col-lg-12">

                <h2 class="form-signin-heading">Berk | Admin </h2>
                <div class="giris" style="margin-bottom:10px;">
                    @Html.TextBoxFor(model => model.adi, new { @class = "form-control", placeholder = "Kullanıcı adınız" })


                </div>

                <div class="giris" style="margin-bottom:10px;">
                    @Html.PasswordFor(model => model.sifre,  new { @class = "form-control", placeholder = "Şifre" })
                </div>
                <div class="giris" style="margin-bottom:10px;">
                    <input type="submit" value="Giriş Yap" class="btn btn-lg btn-primary btn-block" />
                </div>
                <div class="giris" style="margin-bottom:10px;">
                   @ViewBag.Hata
                </div>
            </div>
        </div>

    </div>
    }
</body>
</html>
