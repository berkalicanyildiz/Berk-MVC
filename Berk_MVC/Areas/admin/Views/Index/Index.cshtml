            <div class="panel-heading">
                <h3 class="panel-title">Berk Admin Anasayfa</h3>
            </div>
            <div class="panel-body">

                <div class="col-md-4"> Toplam Makale Sayısı : <span id="toplammakale" >@ViewBag.toplammakale </span> </div>

                <div class="col-md-4"> Toplam Kategori Sayısı : <span id="toplamkategori" >@ViewBag.toplamkategori </span> </div>

                <div class="col-md-4"> Toplam Makale Okunan : <span id="toplamokuma" >@ViewBag.toplamokuma </span> </div>
                <br />
                <hr />

            </div>
        </div>
