
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_admin_layout.cshtml";
}


<div class="container max1200px" style="margin-top:15px;">
    <asp:Panel ID="sitegenelayarlar" runat="server">
